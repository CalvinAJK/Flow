@model Flow.Data.OrganizationRole

@{
    ViewData["Title"] = "Kick";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <form asp-action="Kick">
        <input type="hidden" asp-for="Id" />
        <div class="space-y-12 sm:space-y-16">
            <div>
                <h2 class="text-base font-semibold leading-7 text-gray-900">Kick member</h2>
                <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-600">Are you sure you want to kick this member?</p>

                <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
                    <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                        <label for="username" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">User Email</label>
                        <div class="mt-2 sm:col-span-2 sm:mt-0">
                            <div class="sm:col-span-2 sm:mt-0">
                            <span class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">@ViewBag.UserName</span>
                            </div>
                        </div>
                    </div>

                    <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                        <label for="about" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Role</label>
                        <div class="mt-2 sm:col-span-2 sm:mt-0">
                            <span for="role" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">@Html.DisplayFor(model => model.Role)</span>
                        </div>
                    </div>


                </div>
            </div>

        </div>

        <div class="mt-6 flex items-center gap-x-6">
            <a asp-controller="Home" asp-action="Index" class="text-sm font-semibold leading-6 text-gray-900">Cancel</a>
            <button type="submit" value="Kick" class="inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Kick</button>
        </div>
    </form>

