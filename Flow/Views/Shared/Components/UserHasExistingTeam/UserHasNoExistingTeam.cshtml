@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
    @inject SignInManager<ApplicationUser> SignInManager
    @inject UserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-controller="Team" asp-action="Create" class="relative group flex gap-x-3 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-400 text-white bg-gray-900 ring-2 ring-inset ring-gray-800 hover:ring-2 hover:ring-indigo-600 sm:text-sm sm:leading-6 font-semibold" aria-haspopup="listbox" aria-expanded="true" aria-labelledby="listbox-label">
            <span class="block truncate">Create Team</span>
            <span class="pointer-events-none absolute inset-y-0 right-2 flex items-center">
                <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"></path>
                </svg>
            </span>
        </a>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Login" class="relative group flex gap-x-3 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-400 text-white bg-gray-900 ring-2 ring-inset ring-gray-800 hover:ring-2 hover:ring-indigo-600 sm:text-sm sm:leading-6 font-semibold" aria-haspopup="listbox" aria-expanded="true" aria-labelledby="listbox-label">
            <span class="block truncate">Create Team</span>
            <span class="pointer-events-none absolute inset-y-0 right-2 flex items-center">
                <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"></path>
                </svg>
            </span>
        </a>
    </li>

}
