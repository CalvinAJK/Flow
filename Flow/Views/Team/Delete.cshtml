@model Flow.Data.Team

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="space-y-12 sm:space-y-16">
        <div>
            <h2 class="text-base font-semibold leading-7 text-gray-900">Are you sure you want to delete this team?</h2>

            <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label for="invited" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Team Name</label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <div class="sm:col-span-2 sm:mt-0">
                            <label class="block w-full rounded-md border-0 p-1.5 text-gray-900 font-semibold shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">@Html.DisplayFor(model => model.Name)</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="mt-6 flex items-center gap-x-6">
        <a asp-action="Index" class="text-sm font-semibold leading-6 text-gray-900">Cancel</a>
        <button type="submit" value="DeleteConfirmed" class="inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Delete</button>
    </div>
</form>
