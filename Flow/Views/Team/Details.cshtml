@model List<Flow.Data.TeamRole>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<h1>Details for @ViewData["TeamName"]</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teamUser in Model)
            {
                <tr>
                    <td>@teamUser.UserId</td>
                    <td>@teamUser.Role</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found for this team.</p>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
